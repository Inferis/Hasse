@model Hasse.Web.Models.User.SigninViewModel

@{
    ViewBag.Title = "Inloggen";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<h2>Inloggen</h2>

<p>Je kan snel-inloggen met de volgende diensten:</p>

<ul>
    @foreach (var provider in Model.Providers) {
        <li>@Html.ActionLink(provider.Name, "Signin", new { id = provider.Id }, new { @class = "provider " + provider.Id })</li>
    }
</ul>

<p>Je kan ook inloggen via kindjes.net:</p>
@using(Html.BeginForm("Signin", "User", FormMethod.Post)) {
    <p>
    @Html.LabelFor(x => x.Email) @Html.TextBoxFor(m => m.Email);
    </p>
    <p>
        @Html.LabelFor(x => x.Password) @Html.PasswordFor(m => m.Password);
    </p>
    <p>
        <input type="submit" value="Inloggen"/>
    </p>
    <p>Als je hier nog niet gekend bent, kan je je snel even @Html.ActionLink("aanmelden", "Register").</p>
}

